{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "paths": {
      "@app/fonasa": [
        "libs/fonasa/src"
      ],
      "@app/fonasa/*": [
        "libs/fonasa/src/*"
      ],
    
      "@app/epivigila": [
        "libs/epivigila/src"
      ],
      "@app/epivigila/*": [
        "libs/epivigila/src/*"
      ]
    }
  }
}